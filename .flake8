# Flake8 配置文件
# 遵循 Google Python Style Guide

[flake8]
# 最大行长度 (Google Style 推荐 80，但允许 100)
max-line-length = 100

# 排除的目录
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    archived,
    dbt_packages,
    htmlcov,
    persistence_data,
    .streamlit,
    migrations

# 忽略的错误代码
ignore =
    # E203: whitespace before ':' (与 black 冲突)
    E203,
    # W503: line break before binary operator (与 black 冲突)
    W503,
    # E501: line too long (已由 max-line-length 处理)

# 每个文件的最大复杂度
max-complexity = 10

# 统计信息
statistics = True

# 显示源代码
show-source = True

# 显示错误的 pep8 代码
show-pep8 = True

# 计数
count = True
